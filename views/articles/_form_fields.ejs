<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea required maxlength="300" name="description" id="description" class="form-control"><%= article.description %></textarea>
  </div>
  <div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
  </div>
  <a href="/blog/admin/" class="btn-cancel">Cancel</a>
  <button type="submit" value="Upload" class="btn-save">Save</button>